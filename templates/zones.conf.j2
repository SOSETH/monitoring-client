{% for host in groups['mon-server'] %}
object Endpoint "{{ host }}" {
  host = "{{ host }}"
}
{% endfor %}

object Zone "master" {
    endpoints = [ "{{ groups['mon-server']|join('", "') }}" ]
}

object Endpoint "{{ ansible_fqdn }}" {
}

object Zone "{{ ansible_fqdn }}" {
    endpoints = [ "{{ ansible_fqdn }}" ]
    parent = "master"
}
